@Library('shared-libot') _

pipeline {
    agent any

    parameters {
        string(name: 'AMI_NAME', defaultValue: 'my-ami-name', description: 'Name of the AMI to be created')
    }

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id') // Assuming you have set these credentials in Jenkins
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key') // Assuming you have set these credentials in Jenkins
    }

    stages {
        stage('Build AMI') {
            steps {
                script {
                    generic.buildami(params.AMI_NAME)
                }
            }
        }
    }
}
